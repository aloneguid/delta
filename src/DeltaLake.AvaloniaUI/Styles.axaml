<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System"
        xmlns:i="https://github.com/projektanker/icons.avalonia">

    <Design.PreviewWith>

        <StackPanel>

            <StackPanel Classes="metarow">
                <TextBlock Text="version"/>
                <TextBlock Text="version value"/>
            </StackPanel>

            <StackPanel Classes="metarow">
                <TextBlock Text="version dfsdf"/>
                <TextBlock Text="version value"/>
            </StackPanel>

        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="StackPanel.metarow">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style Selector="StackPanel.metarow TextBlock:nth-child(1)">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHyperlinkTextBrush}"/>
        <Setter Property="Padding" Value="0,0,5,0"/>
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Width" Value="100"/>
    </Style>
</Styles>